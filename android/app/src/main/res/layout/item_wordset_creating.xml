<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/dark_gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Term -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TERM"
            android:textSize="12sp"
            android:textColor="@color/light_gray"
            android:fontFamily="@font/noto_sans_regular"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_term"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter term..."
            android:textSize="16sp"
            android:textColor="@color/white"
            android:textColorHint="@color/light_gray"
            android:fontFamily="@font/noto_sans_regular"
            android:background="@android:color/transparent"
            android:padding="0dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp" />

        <!-- Pronunciation -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PRONUNCIATION"
            android:textSize="12sp"
            android:textColor="@color/light_gray"
            android:fontFamily="@font/noto_sans_regular"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_pronunciation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter pronunciation..."
            android:textSize="16sp"
            android:textColor="@color/white"
            android:textColorHint="@color/light_gray"
            android:fontFamily="@font/noto_sans_regular"
            android:background="@android:color/transparent"
            android:padding="0dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp" />

        <!-- Definition -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DEFINITION"
            android:textSize="12sp"
            android:textColor="@color/light_gray"
            android:fontFamily="@font/noto_sans_regular"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_definition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter definition..."
            android:textSize="16sp"
            android:textColor="@color/white"
            android:textColorHint="@color/light_gray"
            android:fontFamily="@font/noto_sans_regular"
            android:background="@android:color/transparent"
            android:padding="0dp"
            android:minLines="2" />

        <!-- Thêm nút xóa từ ở cuối layout -->
        <ImageButton
            android:id="@+id/btn_delete_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete"
            android:contentDescription="@string/delete_word"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/light_gray"
            android:layout_gravity="end"
            android:layout_marginTop="8dp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/red</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:fontFamily">@font/noto_sans_regular</item>
    </style>

    <!-- Logo style (using Darker Grotesque Bold) -->
    <style name="LogoText">
        <item name="android:fontFamily">@font/darker_grotesque_bold</item>
        <item name="android:textSize">@dimen/logo_text_size</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Primary Button (Sign Up) -->
    <style name="PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/button_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:fontFamily">@font/noto_sans_regular</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Secondary Button (Continue as Guest) -->
    <style name="SecondaryButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:background">@drawable/button_secondary</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:fontFamily">@font/noto_sans_regular</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textAllCaps">false</item>
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <!-- Subtitle text style -->
    <style name="SubtitleText">
        <item name="android:fontFamily">@font/noto_sans_regular</item>
        <item name="android:textSize">@dimen/subtitle_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>
</resources>